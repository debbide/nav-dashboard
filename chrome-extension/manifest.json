{
    "manifest_version": 3,
    "name": "导航仪表盘助手",
    "version": "1.0.0",
    "description": "通过右键菜单快速添加网页到导航仪表盘",
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage",
        "system.display"
    ],
    "host_permissions": [
        "http://*/api/*",
        "https://*/api/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "添加到导航仪表盘",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}